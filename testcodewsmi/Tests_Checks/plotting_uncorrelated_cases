        left_input_LFP_om_right_relevant = left_input_LFP_om_right[:, 100:350]
        right_input_LFP_om_right = right_input_LFP[right_indices[class_right]]
        right_input_LFP_om_right_relevant = right_input_LFP_om_right[:, 100:350]
